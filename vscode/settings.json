{
    // Window/Editor
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "window.nativeTabs": true,
    "window.zoomLevel": 0,
    "editor.tabSize": 2,
    "editor.fontSize": 14,
    "editor.rulers": [
        100, 120
    ],
    "editor.cursorStyle": "line-thin",
    "editor.fontFamily": "Hasklig, 'Source Code Pro', Menlo, monospace, 'Apple Color Emoji'",
    "editor.fontLigatures": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        "*.toml": "toml"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.awcache": true,
    },

    // Themes
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "editorWarning.foreground": "#FFCC00",
        "list.warningForeground": "#FFCC00",
        "gitDecoration.modifiedResourceForeground": "#88CCBB",
        "gitDecoration.ignoredResourceForeground": "#666666",
    },
    "material-icon-theme.folders.associations": {
        "assets": "",
        "media": "resource",
    },

    // Language-specific
    // Python
    "python.venvPath": "~/.virtualenvs",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8CategorySeverity.E": "Warning",
    "python.formatting.provider": "black",
    "[python]": {
        "editor.tabSize": 4
    },

    // JavaScript/TypeScript
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",

    // Misc
    "emmet.triggerExpansionOnTab": true,
    "terminal.integrated.rendererType": "dom",
    "files.useExperimentalFileWatcher": true,
}
